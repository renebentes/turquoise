<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site" method="upgrade">
  <name>turquoise</name>
  <creationDate>04/09/2013</creationDate>
  <author>Rene Bentes Pinto</author>
  <authorEmail>renebentes@yahoo.com.br</authorEmail>
  <authorUrl></authorUrl>
  <copyright>Copyright (C) 2014 Rene Bentes Pinto, Inc. All rights reserved.</copyright>
  <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
  <version>1.0.5</version>
  <description>TPL_TURQUOISE_XML_DESCRIPTION</description>
  <files>
    <folder>css</folder>
    <folder>fonts</folder>
    <folder>html</folder>
    <folder>images</folder>
    <folder>js</folder>
    <folder>language</folder>
    <filename>CHANGELOG.md</filename>
    <filename>component.php</filename>
    <filename>error.php</filename>
    <filename>helper.php</filename>
    <filename>index.html</filename>
    <filename>index.php</filename>
    <filename>LICENSE</filename>
    <filename>offline.php</filename>
    <filename>README.md</filename>
    <filename>template_preview.png</filename>
    <filename>template_thumbnail.png</filename>
    <filename>templateDetails.xml</filename>
  </files>
  <positions>
    <position>bellow</position>
    <position>breadcrumbs</position>
    <position>copyright</position>
    <position>debug</position>
    <position>featured</position>
    <position>footer</position>
    <position>footermenu</position>
    <position>left</position>
    <position>login</position>
    <position>right</position>
    <position>search</position>
    <position>submenu</position>
    <position>topmenu</position>
    <position>usermenu</position>
  </positions>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.tpl_turquoise.ini</language>
    <language tag="en-GB">en-GB/en-GB.tpl_turquoise.sys.ini</language>
    <language tag="pt-BR">pt-BR/pt-BR.tpl_turquoise.ini</language>
    <language tag="pt-BR">pt-BR/pt-BR.tpl_turquoise.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="favicon" type="media" label="TPL_TURQUOISE_PARAMETER_FAVICON_LABEL" description="TPL_TURQUOISE_PARAMETER_FAVICON_DESC" />
        <field name="logo" type="media" label="TPL_TURQUOISE_PARAMETER_LOGO_LABEL" description="TPL_TURQUOISE_PARAMETER_LOGO_DESC" />
        <field name="alternative" type="text" default="" label="TPL_TURQUOISE_PARAMETER_ALTERNATIVE_LABEL" description="TPL_TURQUOISE_PARAMETER_ALTERNATIVE_DESC" />
        <field name="name" type="text" default="" required="true" label="TPL_TURQUOISE_PARAMETER_NAME_LABEL" description="TPL_TURQUOISE_PARAMETER_NAME_DESC" />
        <field name="slogan" type="text" default="" label="TPL_TURQUOISE_PARAMETER_SLOGAN_LABEL" description="TPL_TURQUOISE_PARAMETER_SLOGAN_DESC" />
        <field name="auth" type="text" default="" label="TPL_TURQUOISE_PARAMETER_AUTH_LABEL" description="TPL_TURQUOISE_PARAMETER_AUTH_DESC" />
        <field name="copyright" type="radio" default="1" label="TPL_TURQUOISE_PARAMETER_COPYRIGHT_LABEL" description="TPL_TURQUOISE_PARAMETER_COPYRIGHT_DESC">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
      </fieldset>
      <fieldset name="advanced">
        <field name="load" type="radio" deafult="remote" label="TPL_TURQUOISE_PARAMETER_LOAD_LABEL" description="TPL_TURQUOISE_PARAMETER_LOAD_DESC">
          <option value="remote">TPL_TURQUOISE_PARAMETER_LOAD_VALUE_REMOTE</option>
          <option value="local">TPL_TURQUOISE_PARAMETER_LOAD_VALUE_LOCAL</option>
        </field>
        <field name="disablejs" type="radio" default="1" label="TPL_TURQUOISE_PARAMETER_DISABLEJS_LABEL" description="TPL_TURQUOISE_PARAMETER_DISABLEJS_DESC">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="filejs" type="textarea" label="TPL_TURQUOISE_PARAMETER_FILEJS_LABEL" description="TPL_TURQUOISE_PARAMETER_FILEJS_LABEL" cols="30" rows="4" />
      </fieldset>
    </fields>
  </config>
</extension>